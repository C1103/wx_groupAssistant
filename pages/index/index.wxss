.start::before {
    content: '';
    border-bottom: 2rpx solid #e6e6e6;
    width: 164rpx;
    position: absolute;
    left: 152rpx;
    top: 68rpx;
}

.start::after {
    content: '';
    border-bottom: 2rpx solid #e6e6e6;
    width: 164rpx;
    position: absolute;
    right: 56rpx;
    top: 68rpx;
}